<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_charge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.buxdehuda.timecharger.ChargeActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/remainingTimeTextView"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        tools:text="@string/remainingTimeText" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:id="@+id/chargeButton"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="@string/chargeText" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundBox"
        android:layout_below="@+id/chargeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        tools:text="@string/soundText" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soundBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/doubleBox"
        tools:text="@string/doubleText" />

</RelativeLayout>
